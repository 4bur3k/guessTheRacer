<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/f1regular"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button_registration" />

        <TextView
            android:id="@+id/main_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/f1regular"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="123"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreboard_position"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/text_view_frame"
                android:fontFamily="@font/f1regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="123"/>


                <ImageView
                    android:id="@+id/scoreboard_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerInside"
                    android:text="123"/>


            <TextView
                android:id="@+id/scoreboard_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/text_view_frame"
                android:fontFamily="@font/f1regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="123"/>

            <TextView
                android:id="@+id/scoreboard_scores"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@drawable/text_view_frame"
                android:fontFamily="@font/f1regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="123"/>

            <TextView
                android:id="@+id/scoreboard_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@drawable/text_view_frame"
                android:fontFamily="@font/f1regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="123"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>